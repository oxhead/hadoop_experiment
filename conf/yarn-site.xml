<?xml version="1.0"?>
<configuration>

    <property>
    	<name>yarn.runtime.dir</name>
	<value>${hadoop.runtime.dir}/yarn</value>
    </property>
    <property>
        <name>yarn.nodemanager.dir</name>
        <value>${yarn.runtime.dir}/nodemanager</value>
    </property>

    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>${yarn.resourcemanager.hostname}</value>
    </property>
    <property>
	<name>yarn.resourcemanager.address</name>
	<value>${yarn.resourcemanager.hostname}:18032</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>${yarn.resourcemanager.hostname}:18030</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>0.0.0.0:18088</value>
    </property>
    <property>
        <name>yarn.web-proxy.address</name>
        <value>0.0.0.0:18089</value>
    </property>
    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>${yarn.resourcemanager.hostname}:18031</value>
    </property>
    <property>
        <name>yarn.resourcemanager.admin.address</name>
        <value>${yarn.resourcemanager.hostname}:18033</value>
    </property>

    <property>
        <name>yarn.nodemanager.hostname</name>
        <value>0.0.0.0</value>
    </property>
    <property>
        <name>yarn.nodemanager.address</name>
        <value>${yarn.nodemanager.hostname}:0</value>
    </property>
    <property>
        <name>yarn.nodemanager.webapp.address</name>
        <value>${yarn.nodemanager.hostname}:18042</value>
        <final>true</final>
    </property>
    <property>
        <name>yarn.nodemanager.localizer.address</name>
        <value>${yarn.nodemanager.hostname}:18040</value>
        <final>true</final>
    </property>

    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>${yarn.nodemanager.dir}/logs</value>
        <final>true</final>
    </property>
    <property>
	<name>yarn.nodemanager.local-dirs</name>
	<value>${yarn.nodemanager.local-dirs}</value>
	<final>true</final>
    </property>
    <property>
        <name>yarn.nodemanager.remote-app-log-dir</name>
        <value>${hadoop.storage}/logs/apps</value>
        <final>true</final>
    </property>

    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
    </property>
    <property>
	<name>yarn.nodemanager.aux-services</name>
	<value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
    </property>
    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>${yarn.scheduler.minimum-allocation-mb}</value>
    </property>
    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>4096</value>
    </property>
    <property>
	<name>yarn.nodemanager.resource.memory-mb</name>
	<value>${yarn.nodemanager.resource.memory-mb}</value>
    </property>
    <property>
	<name>yarn.nodemanager.vmem-pmem-ratio</name>
	<value>4</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.class</name>
        <value>${yarn.resourcemanager.scheduler.class}</value>
    </property>
    <property>
    	<name>yarn.inmemory.enabled</name>
    	<value>${yarn.inmemory.enabled}</value>
    </property>
    <property>
        <name>yarn.inmemory.prefetch.dir</name>
        <value>${yarn.inmemory.prefetch.dir}</value>
    </property>
    <property>
    	<name>yarn.inmemory.prefetch.window</name>
    	<value>${yarn.inmemory.prefetch.window}</value>
    </property>
    <property>
        <name>yarn.inmemory.prefetch.concurrency</name>
        <value>${yarn.inmemory.prefetch.concurrency}</value>
    </property>
    <property>
        <name>yarn.inmemory.prefetch.tasks</name>
        <value>${yarn.inmemory.prefetch.tasks}</value>
    </property>
    <property>
        <name>yarn.inmemory.prefetch.transfer</name>
        <value>${yarn.inmemory.prefetch.transfer}</value>
    </property>
    <property>
        <name>yarn.inmemory.prefetch.inputstream.enabled</name>
        <value>${yarn.inmemory.prefetch.inputstream.enabled}</value>
    </property>
    <property>
        <name>yarn.inmemory.token.number</name>
        <value>50</value>
    </property>
    <property>
        <name>yarn.inmemory.token.size</name>
        <value>1048576</value>
	<!--<value>3145728</value>-->
	<!--<value>2097152</value>-->
	<!--<value>4194304</value>-->
	<!--<value>67108864</value>-->
    </property>
    <property>
        <name>yarn.inmemory.token.interval</name>
        <value>100</value>
    </property>
    <property>
        <name>yarn.am.liveness-monitor.expiry-interval-ms</name>
        <value>3600000</value>
    </property>
    <!--
    <property>
        <name>yarn.resourcemanager.am.max-attempts</name>
        <value>100</value>
    </property>
    -->
</configuration>
